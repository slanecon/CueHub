{
  "name": "cue-hub",
  "version": "1.0.0",
  "description": "Sound editing cue management for LAN deployment",
  "main": "server.js",
  "scripts": {
    "dev":          "vite",
    "build":        "vite build",
    "build:copy":   "npm run build && cp -r web/dist/. desktop/CueHub/Resources/Web/",
    "build:server": "tsc --project tsconfig.server.json",
    "start":        "ts-node --project tsconfig.server.json server/index.ts",
    "typecheck":    "vue-tsc --noEmit && tsc --project tsconfig.server.json --noEmit"
  },
  "dependencies": {
    "express": "^4.21.0",
    "better-sqlite3": "^11.7.0",
    "vue": "^3.5.0",
    "pinia": "^2.2.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node": "^10.0.0",
    "vite": "^6.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "vue-tsc": "^2.0.0",
    "@types/express": "^4.17.0",
    "@types/better-sqlite3": "^7.0.0",
    "@types/node": "^22.0.0"
  },
  "license": "MIT"
}